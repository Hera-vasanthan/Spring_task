import { ComponentFixture, TestBed } from '@angular/core/testing';
import { MatDialog } from '@angular/material/dialog';
import { MatTableDataSource } from '@angular/material/table';
import { RouterTestingModule } from '@angular/router/testing';
import { of } from 'rxjs';
import { ApiService } from '../services/api.service';
import { NgToastService } from 'ng-angular-popup';
import { JobsComponent } from './jobs.component';

describe('JobsComponent', () => {
  let component: JobsComponent;
  let fixture: ComponentFixture<JobsComponent>;
  let apiServiceSpy: jasmine.SpyObj<ApiService>;
  let matDialogSpy: jasmine.SpyObj<MatDialog>;
  let toastServiceSpy: jasmine.SpyObj<NgToastService>;

  beforeEach(async () => {
    const apiServiceSpyObj = jasmine.createSpyObj('ApiService', ['getJob', 'deleteJob']);
    const matDialogSpyObj = jasmine.createSpyObj('MatDialog', ['open']);
    const toastServiceSpyObj = jasmine.createSpyObj('NgToastService', ['success', 'error']);

    await TestBed.configureTestingModule({
      declarations: [ JobsComponent ],
      imports: [RouterTestingModule],
      providers: [
        { provide: ApiService, useValue: apiServiceSpyObj },
        { provide: MatDialog, useValue: matDialogSpyObj },
        { provide: NgToastService, useValue: toastServiceSpyObj }
      ]
    }).compileComponents();

    apiServiceSpy = TestBed.inject(ApiService) as jasmine.SpyObj<ApiService>;
    matDialogSpy = TestBed.inject(MatDialog) as jasmine.SpyObj<MatDialog>;
    toastServiceSpy = TestBed.inject(NgToastService) as jasmine.SpyObj<NgToastService>;
  });

  beforeEach(() => {
    fixture = TestBed.createComponent(JobsComponent);
    component = fixture.componentInstance;
  });

  it('should create', () => {
    expect(component).toBeTruthy();
  });

  it('should fetch job data on ngOnInit', () => {
    const mockData = [
      { id: 1, position: 'Software Developer', companyname: 'ABC Inc.', role: 'Developer', salary: '$60,000', location: 'New York', skillsrequired: 'Angular, JavaScript', criteria: 'Bachelor\'s Degree' }
    ];
    apiServiceSpy.getJob.and.returnValue(of(mockData));

    component.ngOnInit();

    expect(apiServiceSpy.getJob).toHaveBeenCalled();
    expect(component.dataSource.data).toEqual(mockData);
  });

  // Add more test cases as needed for other component methods such as applyFilter, about, openDialog, editJob, deleteJob, logout
});
