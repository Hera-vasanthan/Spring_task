import { TestBed, inject, waitForAsync } from '@angular/core/testing';
import { HttpClientTestingModule, HttpTestingController } from '@angular/common/http/testing';
import { ApiService } from './api.service';

describe('ApiService', () => {
  let service: ApiService;
  let httpMock: HttpTestingController;

  beforeEach(() => {
    TestBed.configureTestingModule({
      imports: [HttpClientTestingModule],
      providers: [ApiService]
    });
    service = TestBed.inject(ApiService);
    httpMock = TestBed.inject(HttpTestingController);
  });

  afterEach(() => {
    httpMock.verify(); // Verifies that no requests are outstanding.
  });

  it('should be created', () => {
    expect(service).toBeTruthy();
  });

  it('should post job successfully', waitForAsync(() => {
    const mockJobData = { /* mock job data */ };
    service.postJob(mockJobData).subscribe(response => {
      expect(response).toBeDefined();
      // Add more expectations based on the response if needed
    });

    const request = httpMock.expectOne('http://localhost:8080/api/job/');
    expect(request.request.method).toBe('POST');
    request.flush({ /* mock response data */ });
  }));

  it('should get job successfully', waitForAsync(() => {
    service.getJob().subscribe(response => {
      expect(response).toBeDefined();
      // Add more expectations based on the response if needed
    });

    const request = httpMock.expectOne('http://localhost:8080/api/jobs/');
    expect(request.request.method).toBe('GET');
    request.flush({ /* mock response data */ });
  }));

  // Write similar tests for other methods (getJobById, putJob, deleteJob)
});
